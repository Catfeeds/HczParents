<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/add_child_tips_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/add_child_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_add_web_margin_left_20dp"
        android:src="@drawable/add_child_icon"/>

    <LinearLayout
        android:layout_below="@id/add_child_icon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_title_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layout_content_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="欢迎使用好上网"
            android:singleLine="true"
            android:textColor="#505050"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_child_tips_btn_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_kefu_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>