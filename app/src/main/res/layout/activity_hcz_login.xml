<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="30dip"
                    android:src="@drawable/ic_logo" />

                <LinearLayout
                    android:id="@+id/hcz_pwd_login_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/hcz_pwd_login_service"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/hcz_pwd_login_base2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_login_services" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/hcz_pwd_login_base2"
                            android:gravity="center_vertical"
                            android:text="选择业务"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_pull_down" />

                        <TextView
                            android:id="@+id/hcz_pwd_login_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="120dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hcz_pwd_login_adress_iv"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/hcz_pwd_login_iv_base"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_login_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/hcz_pwd_login_iv_base"
                            android:gravity="center_vertical"
                            android:text="所在地区"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dip"
                            android:src="@drawable/ic_pull_down" />

                        <TextView
                            android:id="@+id/hcz_pwd_login_adress_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="120dp"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg">

                        <EditText
                            android:id="@+id/hcz_login_item_et_num"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="@color/transparent"
                            android:drawableLeft="@drawable/ic_user1"
                            android:drawablePadding="10dip"
                            android:gravity="center_vertical"
                            android:hint="请输入手机号"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/item_edittext"
                            android:textColorHint="@color/item_edittext_hint"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/activity_login_delete_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:src="@drawable/add_children_delete_phone"
                            android:visibility="gone" />c
                    </RelativeLayout>
                    <!-- 密码输入 -->

                    <EditText
                        android:id="@+id/hcz_login_item_et_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg"
                        android:drawableLeft="@drawable/ic_sign_password"
                        android:drawablePadding="10dip"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/item_edittext"
                        android:textColorHint="@color/item_edittext_hint"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hcz_code_login_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/hcz_code_login_service"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/hcz_code_login_base2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_login_services" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/hcz_code_login_base2"
                            android:gravity="center_vertical"
                            android:text="选择业务"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_pull_down" />

                        <TextView
                            android:id="@+id/hcz_code_login_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="120dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hcz_code_login_adress_iv"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_top_10dp"
                        android:background="@drawable/view_item_bg"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/hcz_code_login_iv_base"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_login_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/hcz_code_login_iv_base"
                            android:gravity="center_vertical"
                            android:text="所在地区"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="10dip"
                            android:src="@drawable/ic_pull_down" />

                        <TextView
                            android:id="@+id/hcz_code_login_adress_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="120dp"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/item_edittext"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:background="@drawable/view_item_bg">

                        <EditText
                            android:id="@+id/activity_login_code_num"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:background="@color/transparent"
                            android:drawableLeft="@drawable/ic_user1"
                            android:drawablePadding="10dip"
                            android:gravity="center_vertical"
                            android:hint="请输入手机号"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/item_edittext"
                            android:textColorHint="@color/item_edittext_hint"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/activity_login_code_delete_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:src="@drawable/add_children_delete_phone"
                            android:visibility="gone" />
                    </RelativeLayout>
                    <!-- 密码输入 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/activity_add_ll_head_40dp"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/activity_login_code_password"
                            android:layout_width="0dp"
                            android:layout_height="40dip"
                            android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                            android:layout_marginRight="@dimen/activity_margin_right_20dp"
                            android:layout_weight="1"
                            android:background="@drawable/view_item_bg"
                            android:drawableLeft="@drawable/ic_sign_password"
                            android:drawablePadding="10dip"
                            android:gravity="center_vertical"
                            android:hint="请输入动态码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:textColor="@color/item_edittext"
                            android:textColorHint="@color/item_edittext_hint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/activity_code_login_getcode"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="@dimen/activity_margin_right_20dp"
                            android:background="@drawable/view_bottom_button_bg"
                            android:gravity="center"
                            android:paddingLeft="@dimen/activity_margin_10dp"
                            android:paddingRight="@dimen/activity_margin_10dp"
                            android:singleLine="true"
                            android:text="获取动态码"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_20dp"
                        android:layout_marginTop="@dimen/activity_margin_10dp"
                        android:text="未注册将自动创建帐号"
                        android:textColor="@color/item_edittext_hint" />
                </LinearLayout>
                <!-- 登录按钮 -->

                <RelativeLayout
                    android:id="@+id/hcz_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                    android:layout_marginRight="@dimen/activity_margin_right_20dp"
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:background="@drawable/view_bottom_button_bg">

                    <TextView
                        android:id="@+id/activity_login_item_tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="立即登录"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/login_checked_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                    android:layout_marginRight="@dimen/activity_margin_right_20dp"
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/code_login"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_5dp"
                        android:text="手机动态码登录"
                        android:textColor="#606060"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/hcz_login_item_forget_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_5dp"
                        android:text="忘记密码？"
                        android:textColor="#68a5db"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/activity_margin_15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册即代表你同意"
                        android:textColor="#606060"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hcz_xieyi_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="用户协议和隐私政策"
                        android:textColor="#606060"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/other_login_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_lin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_5dp"
                        android:layout_marginRight="@dimen/activity_margin_5dp"
                        android:text="其他登录方式" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:layout_weight="1"
                        android:background="@drawable/login_lin" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/other_login_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weixin_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                        android:layout_marginRight="@dimen/activity_margin_top_30dp"
                        android:src="@drawable/weixin_login_icon" />

                    <ImageView
                        android:id="@+id/qq_login_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_top_30dp"
                        android:layout_marginRight="@dimen/activity_margin_right_20dp"
                        android:src="@drawable/qq_login_icon" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>