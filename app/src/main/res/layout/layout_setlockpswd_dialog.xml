<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_title_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入紧急解屏密码"
            android:layout_marginTop="@dimen/activity_add_web_margin_left_20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layout_content_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="不能超过6位数字"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/layout_setlock_et"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_margin_top_40dp"
            android:layout_marginRight="@dimen/activity_margin_top_40dp"
            android:layout_height="@dimen/activity_margin_top_30dp"
            android:background="@drawable/view_item_bg"
            android:gravity="center"
            android:maxLength="6"
            android:inputType="number"
            android:layout_marginTop="@dimen/activity_add_web_margin_left_20dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:drawablePadding="10dip"
            android:hint="输入密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/activity_add_web_margin_left_20dp"
        android:background="#d6d6d6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/layout_kefu_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

        <TextView
            android:id="@+id/layout_kefu_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>