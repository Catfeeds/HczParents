<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_item_child_ll"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/activity_add_time_margin_right_20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_child_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f7"
        android:textColor="#cc6c6c6c"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="设备号:A000000000000000000000000000000001"
        />
    <RelativeLayout
        android:id="@+id/item_dynamic_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_add_time_margin_right_20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_child_icon"
            android:layout_width="@dimen/activity_margin_top_40dp"
            android:layout_height="@dimen/activity_margin_top_40dp"
            android:src="@drawable/children_head_1"
            android:layout_marginLeft="20dp"
             />
        <LinearLayout
            android:id="@+id/rlTimeline"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/item_child_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_margin_top_30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小名"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f7" />

            <TextView
                android:id="@+id/item_child_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15228290000"
                android:layout_below="@id/tvTopLine"
                android:layout_centerHorizontal="true"
                />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
