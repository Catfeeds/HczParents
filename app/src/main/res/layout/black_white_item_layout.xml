<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_add_ll_head_45dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/black_white_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@drawable/black_white_title_text_color"
            android:textSize="13sp" />

        <View
            android:id="@+id/black_white_v"
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#73c940"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/black_white_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/black_white_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/web_uncheck_hint_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="invisible" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#e7e7e6" />

        <View
            android:id="@+id/black_white_vh"
            android:layout_width="1dp"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#e7e7e6" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#e7e7e6"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>