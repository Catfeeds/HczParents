<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    android:orientation="vertical" >

    <include android:id="@+id/title_layout"
        layout="@layout/activity_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <com.goodsurfing.view.RoundImageView
            android:id="@+id/activity_info_children_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/setting_children_head_defult_btn"
            android:scaleType="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_add_ll_head_40dp"
        android:layout_marginTop="@dimen/activity_margin_top_20dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/setting_children_name" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="15dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="昵称"
            android:textColor="#505050"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_info_children_et_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="12dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawableBottom="#f8f8f8"
            android:drawableRight="@drawable/ic_right"
            android:hint="请输入昵称"
            android:singleLine="true"
            android:editable="false"
            android:textColor="#505050"
            android:textColorHint="#bbbbbb"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/activity_info_children_delete_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            android:src="@drawable/add_children_delete_phone"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_add_ll_head_40dp"
        android:layout_marginTop="@dimen/activity_margin_top_20dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/setting_children_defult_phone" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="15dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="手机号"
            android:textColor="#505050"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_info_children_tv_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#bfbfbf"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="105dp"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_add_ll_head_40dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/setting_children_defult_yys" />

        <TextView
            android:id="@+id/activity_info_children_tv_code"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="15dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="设备名称"
            android:textColor="#505050"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_info_children_tv_yy"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#bfbfbf"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="105dp"
        android:layout_height="1dp"
        android:background="@color/white" />
    <!-- 验证码 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_add_ll_head_40dp"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_info_children_tv_address"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#bfbfbf"
            android:textSize="15sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/activity_info_children_save_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="@dimen/activity_margin_top_40dp"
        android:background="@drawable/view_bottom_button_bg"
        android:gravity="center"
        android:padding="7dp"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/activity_info_children_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="@dimen/activity_margin_20dp"
        android:background="@drawable/view_bottom_button_bg_yellow"
        android:gravity="center"
        android:padding="7dp"
        android:text="解除绑定"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>