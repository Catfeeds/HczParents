<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/activity_head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/activity_find_password_item_et_num"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_find_password_ll_head_40dp"
                android:layout_marginLeft="@dimen/activity_find_password_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_find_password_margin_right_20dp"
                android:layout_marginTop="@dimen/activity_find_password_margin_top_10dp"
                android:background="@drawable/view_item_bg"
                android:drawableLeft="@drawable/ic_user1"
                android:drawablePadding="15dip"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/item_edittext"
                android:textColorHint="@color/item_edittext_hint"
                android:textSize="12sp" />

            <!-- 密码输入 -->


            <!-- 验证码 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_find_password_ll_head_40dp"
                android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_margin_right_20dp"
                android:layout_marginTop="@dimen/activity_margin_top_10dp"
                android:background="@drawable/view_item_bg" >

                <EditText
                    android:id="@+id/activity_register_item_et_code"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="12dip"
                    android:layout_weight="1.5"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_sign_password"
                    android:drawablePadding="15dip"
                    android:gravity="left|center_vertical"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/item_edittext"
                    android:textColorHint="@color/item_edittext_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/activity_register_item_tv_code"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="4dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="3"
                    android:background="@drawable/view_bottom_button_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/activity_find_password_item_new_password"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_find_password_ll_head_40dp"
                android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_margin_right_20dp"
                android:layout_marginTop="@dimen/activity_margin_top_10dp"
                android:background="@drawable/view_item_bg"
                android:drawableLeft="@drawable/ic_find_password_comfirm"
                android:drawablePadding="15dip"
                android:gravity="center_vertical"
                android:hint="设置新密码(必须包含字母和数字)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/item_edittext"
                android:textColorHint="@color/item_edittext_hint"
                android:textSize="12sp" />

            <!-- 密码输入 -->

            <EditText
                android:id="@+id/activity_find_passwrod_item_et_password"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_find_password_ll_head_40dp"
                android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_margin_right_20dp"
                android:layout_marginTop="@dimen/activity_margin_top_10dp"
                android:background="@drawable/view_item_bg"
                android:drawableLeft="@drawable/ic_find_password_new"
                android:drawablePadding="15dip"
                android:gravity="center_vertical"
                android:hint="确认新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/item_edittext"
                android:textColorHint="@color/item_edittext_hint"
                android:textSize="12sp" />

            <!-- 登录按钮 -->

            <RelativeLayout
                android:id="@+id/activity_find_password_item_rl_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_find_password_ll_head_40dp"
                android:layout_marginLeft="@dimen/activity_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_margin_right_20dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/view_bottom_button_bg" >

                <TextView
                    android:id="@+id/activity_find_password_item_tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="确认提交"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>