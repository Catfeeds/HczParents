<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_dynamic_ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_top_30dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/activity_add_time_view_margin_top_20dp"
            android:gravity="center"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_mode_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_mode_bg1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="模式切换"
                    android:textColor="#5a667d" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_time_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_time_bg1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="时段控制"
                    android:textColor="#5a667d" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_app_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_app_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="应用管控"
                    android:textColor="#5a667d" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/activity_add_time_view_margin_top_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_lock_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_net_bg1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="一键锁屏"
                    android:textColor="#5a667d" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_dynamic_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_dt_bg1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="使用动态"
                    android:textColor="#5a667d" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_location_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_location_bg1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="运动轨迹"
                    android:textColor="#5a667d" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_5dp"
            android:background="#f5f5f7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_add_time_margin_left_20dp"
                android:text="使用动态"
                android:textColor="#383838"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/activity_add_time_margin_left_20dp"
                android:layout_marginRight="@dimen/activity_add_time_margin_left_20dp"
                android:background="#eaeaea" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_dynamic_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/activity_add_time_margin_left_20dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvAcceptTime2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="6月22日"
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="#806f6f6f"
            android:textSize="12sp" />
        <RelativeLayout
            android:id="@+id/rlTimeline2"
            android:layout_width="32dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTopLine2"
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f7" />

            <TextView
                android:id="@+id/tvDot2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@id/tvTopLine2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dynamic_old_icon" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_below="@id/tvDot2"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f7" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCenter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="26dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前模式:"
                android:textColor="#b3333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mode_title"
                android:layout_marginLeft="10dp"
                android:textColor="#ff8b67"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivmode"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_below="@id/mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mode_iv_icon"
                />
            <TextView
                android:id="@+id/tv_mode_tips"
                android:layout_marginTop="@dimen/activity_margin_15dp"
                android:layout_below="@id/mode_title"
                android:layout_toRightOf="@id/ivmode"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#6f6f6f"
                />
            <TextView
                android:id="@+id/tv_mode_button"
                android:layout_below="@id/ivmode"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_10dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#9d9d9d"
                android:text="前往切换模式>"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_dynamic_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvAcceptTime"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#f5f5f7"
            android:textSize="12sp" />
        <RelativeLayout
            android:id="@+id/rlTimeline"
            android:layout_width="32dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTopLine"
                android:layout_width="0.5dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f7" />

            <TextView
                android:id="@+id/tvDot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_below="@id/tvTopLine"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dynamic_old_icon" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_below="@id/tvDot"
                android:layout_centerHorizontal="true"
                android:background="#f5f5f7" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:id="@+id/tvAcceptStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:textColor="#f5f5f7"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvDynamicInfo"
                android:layout_width="wrap_content"
                android:textColor="#9d9d9d"
                android:textSize="12sp"
                android:layout_below="@id/tvAcceptStation"
                android:layout_marginTop="@dimen/activity_margin_10dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
