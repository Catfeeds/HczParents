<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/activity_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/activity_control_tab_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white" >

            <ImageView
                android:id="@+id/activity_control_tab1_iv"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/terminal_pc" />

            <CheckBox
                android:id="@+id/activity_control_tab1_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/activity_control_tab1_cb"
                android:layout_toRightOf="@id/activity_control_tab1_iv"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="电脑"
                    android:textColor="#505050"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/activity_control_tab1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="未控制"
                    android:textColor="#fc5959"
                    android:textSize="13sp" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:id="@+id/activity_control_tab_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white" >

            <ImageView
                android:id="@+id/activity_control_tab2_iv"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/terminal_phone" />

            <CheckBox
                android:id="@+id/activity_control_tab2_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/activity_control_tab2_cb"
                android:layout_toRightOf="@id/activity_control_tab2_iv"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="手机"
                    android:textColor="#505050"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/activity_control_tab2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="未控制"
                    android:textColor="#fc5959"
                    android:textSize="13sp" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:id="@+id/activity_control_tab_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white" >

            <ImageView
                android:id="@+id/activity_control_tab3_iv"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/terminal_pad" />

            <CheckBox
                android:id="@+id/activity_control_tab3_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/activity_control_tab3_cb"
                android:layout_toRightOf="@id/activity_control_tab3_iv"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="平板电脑"
                    android:textColor="#505050"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/activity_control_tab3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="未控制"
                    android:textColor="#fc5959"
                    android:textSize="13sp" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:id="@+id/activity_control_tab_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white" >

            <ImageView
                android:id="@+id/activity_control_tab4_iv"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/terminal_tv" />

            <CheckBox
                android:id="@+id/activity_control_tab4_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_toLeftOf="@id/activity_control_tab4_cb"
                android:layout_toRightOf="@id/activity_control_tab4_iv"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="电视盒子"
                    android:textColor="#505050"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/activity_control_tab4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:text="未控制"
                    android:textColor="#fc5959"
                    android:textSize="13sp" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e6" />
    </LinearLayout>

</LinearLayout>