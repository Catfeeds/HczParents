<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/activity_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dp"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_charge_list_head_50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/item_charge_bg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/activity_charge_list_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="一年费会员"
                android:textColor="#323232"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_charge_list_head_50dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="金额"
                android:textColor="#323232"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_charge_list_tv_values"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:gravity="center_vertical"
                android:textColor="#f72d2d"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e7e7e6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="21dp"
            android:gravity="center_vertical"
            android:text="选择付款方式"
            android:textColor="#959595"
            android:textSize="11sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dip"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_charge_list_rl_head_60dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/activity_settings_base_iv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_charge_list_margin_left_15dp"
                android:src="@drawable/ic_charge_zhifu" >
            </ImageView>

            <TextView
                android:id="@+id/activity_settings_base_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_charge_list_margin_left_10dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/activity_settings_base_iv2"
                android:gravity="center_vertical"
                android:text="支付宝"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_settings_base_tv2"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/activity_settings_base_iv2"
                android:text="推荐已安装支付宝的用户使用"
                android:textColor="#999999"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/activity_charge_iv_zhifu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_charge_list_margin_right_15dp"
                android:src="@drawable/ic_charge_select" >
            </ImageView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e7e7e6" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_charge_list_rl_head_60dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/activity_settings_base_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_charge_list_margin_left_15dp"
                android:src="@drawable/ic_charge_weixin" >
            </ImageView>

            <TextView
                android:id="@+id/activity_settings_base_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_charge_list_margin_left_10dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/activity_settings_base_iv"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_settings_base_tv"
                android:layout_marginLeft="@dimen/activity_charge_list_margin_left_10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/activity_settings_base_iv"
                android:gravity="center_vertical"
                android:text="推荐已安装微信的用户使用"
                android:textColor="#999999"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/activity_charge_iv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_charge_list_margin_right_15dp"
                android:src="@drawable/ic_charge_unselect" >
            </ImageView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e7e7e6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/activity_setting_loginout_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_charge_list_button_head_40dp"
            android:layout_marginLeft="@dimen/activity_margin_left_20dp"
            android:layout_marginRight="@dimen/activity_margin_right_20dp"
            android:background="@drawable/view_bottom_button_bg" >

            <TextView
                android:id="@+id/activity_setting_tv_loginout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>