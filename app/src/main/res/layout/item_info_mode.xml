<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlCenter2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/item_mode_info_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="26dp"
        android:paddingLeft="@dimen/activity_margin_20dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前模式:"
            android:textColor="#b3333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mode_title"
            android:textColor="#ff8b67"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mode_title"
            android:layout_marginLeft="@dimen/activity_margin_top_40dp"
            android:layout_marginTop="@dimen/activity_margin_15dp"
            android:src="@drawable/mode_iv_icon" />

        <TextView
            android:id="@+id/tv_mode_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mode_title"
            android:layout_marginLeft="@dimen/activity_margin_10dp"
            android:layout_marginTop="@dimen/activity_margin_15dp"
            android:layout_toRightOf="@id/ivmode"
            android:textColor="#6f6f6f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ivmode"
            android:layout_marginRight="@dimen/activity_margin_10dp"
            android:layout_marginTop="12dp"
            android:text="前往切换模式>"
            android:textColor="#9d9d9d"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/item_mode_info_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_5dp"
        android:background="#f5f5f7" />
</RelativeLayout>
