<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/wrapper_seekbar_indicator"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_seekbar_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txt_seekbar_indicated_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/space_12"
            tools:text="100" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="120dp">

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:secondaryProgress="50"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_margin_20dp"
            android:layout_marginLeft="@dimen/activity_margin_10dp"
            android:layout_marginRight="@dimen/activity_margin_10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30"
                android:gravity="right"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:gravity="right"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="90"
                android:gravity="right"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="120分钟"
                android:gravity="right"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</merge>